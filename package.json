{
    "name": "app",
    "private": true,
    "version": "0.0.5",
    "description": "Team 04 of NUS ISS MTech SE Bridging Program Project",
    "author": "Star6ucks <foo@bar.baz>",
    "license": "MIT",
    "scripts": {
        "dev": "node scripts/watch.mjs",
        "prebuild": "vue-tsc --noEmit --p packages/renderer/tsconfig.json && node scripts/build.mjs",
        "build": "electron-builder",
        "dist": "yarn run prebuild && yarn run build",
        "dist-win": "yarn run prebuild && electron-builder --win",
        "init": "git config core.hooksPath .git/hooks/ && rm -rf .git/hooks && npx simple-git-hooks",
        "test:e2e": "npx playwright test",
        "test:e2e:headless": "npx playwright test --headed",
        "lint": "eslint --fix packages/**/*.{ts,vue}",
        "fix": "yarn run lint"
    },
    "main": "dist/main/index.cjs",
    "engines": {
        "node": ">=14.17.0"
    },
    "nano-staged": {
        "packages/renderer/*.{ts,vue}": [
            "eslint --fix"
        ]
    },
    "dependencies": {
        "electron-store": "^8.0.1",
        "pinia": "^2.0.14",
        "vue-class-component": "^7.2.6",
        "vue-template-compiler": "^2.6.14"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^0.25.1",
        "@icon-park/vue": "^1.4.0",
        "@playwright/test": "^1.22.2",
        "@vue/composition-api": "^1.6.2",
        "autoprefixer": "^10.4.7",
        "axios": "^0.27.2",
        "electron": "19.0.1",
        "electron-builder": "^23.0.3",
        "electron-devtools-installer": "^3.2.0",
        "eslint": "^8.17.0",
        "eslint-plugin-prettier-vue": "^4.1.0",
        "nano-staged": "^0.8.0",
        "postcss": "^8.4.14",
        "simple-git-hooks": "^2.8.0",
        "swrv": "^0.9.6",
        "tailwindcss": "^3.1.1",
        "typescript": "^4.7.3",
        "v8-compile-cache": "^2.3.0",
        "vite": "^2.9.10",
        "vite-plugin-electron": "^0.4.5",
        "vite-plugin-resolve": "^2.1.2",
        "vite-plugin-vue2": "^2.0.1",
        "vue": "^2.6.11",
        "vue-router": "^3.2.0",
        "vue-tsc": "^0.35.2"
    },
    "env": {
        "VITE_DEV_SERVER_HOST": "127.0.0.1",
        "VITE_DEV_SERVER_PORT": 3344
    },
    "eslintIgnore": ["**/openapi/*.ts"],
    "keywords": [
        "electron",
        "rollup",
        "vite",
        "vue3",
        "vue"
    ]
}

{
  "name": "app",
  "private": true,
  "version": "0.1.0",
  "description": "Team 04 of NUS ISS MTech SE Bridging Program Project",
  "author": "Star6ucks <foo@bar.baz>",
  "license": "MIT",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "ng": "ng",
    "start": "npm-run-all -p electron:serve ng:serve",
    "ng:serve": "ng serve -c web -o",
    "prebuild": "ng build --base-href ./",
    "build": "node scripts/build.mjs && npm run electron:serve-tsc && ng build --base-href ./",
    "build:dev": "npm run build -- -c dev && npm run electron:serve-tsc",
    "build:prod": "npm run build -- -c production && npm run electron:serve-tsc",
    "web:build": "npm run build -- -c web-production",
    "electron": "electron",
    "electron:serve-tsc": "tsc -p tsconfig.serve.json",
    "electron:serve": "wait-on tcp:4200 && npm run electron:serve-tsc && electron . --serve",
    "electron:local": "npm run build:prod && electron .",
    "electron:build": "npm run build:prod && electron-builder build --publish=never",
    "dist": "npm run build:prod && electron-builder build --publish=never",
    "dist-win": "npm run build:prod && electron-builder build --publish=never --win",
    "test": "ng test --watch=false",
    "test:watch": "ng test",
    "version": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "lint": "ng lint",
    "fix": "yarn run lint"
  },
  "main": "app/main.js",
  "engines": {
    "node": ">=14.17.0"
  },
  "nano-staged": {
    "src/**/*.{ts}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@angular/animations": "^14.0.0",
    "@angular/common": "^14.0.0",
    "@angular/compiler": "^14.0.0",
    "@angular/core": "^14.0.0",
    "@angular/forms": "^14.0.0",
    "@angular/language-service": "^14.0.0",
    "@angular/platform-browser": "^14.0.0",
    "@angular/platform-browser-dynamic": "^14.0.0",
    "@angular/router": "^14.0.0",
    "rxjs": "7.5.5",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.5"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "14.0.0",
    "@angular-devkit/build-angular": "^14.0.3",
    "@angular-eslint/builder": "14.0.0",
    "@angular-eslint/eslint-plugin": "14.0.0",
    "@angular-eslint/eslint-plugin-template": "14.0.0",
    "@angular-eslint/schematics": "14.0.0",
    "@angular-eslint/template-parser": "14.0.0",
    "@angular/cli": "~14.0.3",
    "@angular/compiler-cli": "^14.0.0",
    "@ngx-translate/core": "14.0.0",
    "@ngx-translate/http-loader": "7.0.0",
    "@types/jasmine": "3.10.3",
    "@types/jasminewd2": "2.0.10",
    "@types/node": "17.0.23",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "angular-svg-icon": "14.0.0",
    "autoprefixer": "10.4.7",
    "electron": "19.0.1",
    "electron-builder": "^23.0.3",
    "electron-debug": "3.2.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-reloader": "1.2.3",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "jasmine-core": "3.10.1",
    "jasmine-spec-reporter": "7.0.0",
    "karma": "6.3.17",
    "karma-coverage-istanbul-reporter": "3.0.3",
    "karma-electron": "7.1.0",
    "karma-jasmine": "4.0.2",
    "karma-jasmine-html-reporter": "1.7.0",
    "nano-staged": "0.8.0",
    "node-polyfill-webpack-plugin": "1.1.4",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.14",
    "prettier": "2.7.1",
    "prettier-eslint": "15.0.1",
    "simple-git-hooks": "^2.8.0",
    "tailwindcss": "3.1.4",
    "ts-node": "10.7.0",
    "typescript": "~4.7.2",
    "wait-on": "6.0.1",
    "webdriver-manager": "12.1.8"
  },
  "eslintIgnore": [
    "**/openapi/*.ts"
  ]
}
